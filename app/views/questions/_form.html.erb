<%= semantic_form_for @question do |f| %>

    <%= f.inputs do %>
        <%= f.input :user_id, :as => :hidden, :label => false, :input_html => { :value => current_user.id } %>

        <%= f.input :title, :label => ':your question', :as => :email %>
        <%= f.input :tag_list, :as => :string, :label => ':tags', :hint => 'tags separated by commas' %>
        <%= f.input :body, :as => :text, :label => ':description' %>
        <%= f.input :active, :as => :boolean, :label => 'is active?' %>

        <%= f.action :submit, :label => 'ask', :button_html => {:class => "tiny button secondary"} %>

    <% end %>
<% end %>